{% extends 'base.html.twig' %}

{% block title %}Hello Admin !{% endblock %}

{% block body %}

    <style>table, td { border: 1px solid #333; } thead, tfoot { background-color: #333; color: #fff; }
        .modifier, .supprimer {
        border: 0;
        line-height: 2.5;
        padding: 0 20px;
        font-size: 1rem;
        text-align: center;
        color: #fff;
        text-shadow: 1px 1px 1px #000;
        border-radius: 10px;
        background-image: linear-gradient(to top left,
                                        rgba(0, 0, 0, .2),
                                        rgba(0, 0, 0, .2) 30%,
                                        rgba(0, 0, 0, 0));
        box-shadow: inset 2px 2px 3px rgba(255, 255, 255, .6),
                    inset -2px -2px 3px rgba(0, 0, 0, .6);
        }

        .modifier { background-color: green; }
        .supprimer { background-color: rgba(220, 0, 0, 1); }

        .supprimer:hover {
            background-color: rgba(255, 0, 0, 1);
        }

        .modifier:active, .supprimer:active {
            box-shadow: inset -2px -2px 3px rgba(255, 255, 255, .6),
                        inset 2px 2px 3px rgba(0, 0, 0, .6);
        }   
    </style>

    <table>
    {% for article in articles %}
        <tbody>
            <tr>
                    <td>{{article.id}}</td>
                    <td>{{article.title}}</td>
                    <td>{{article.category.name}}</td>
                    <td><a class="modifier" href="{{path('admin_delete', {id: article.id})}}">Modifier</a><a class="supprimer" href="{{path('admin_delete', {id: article.id})}}">Supprimer</a></td>
            </tr>
        </tbody>
        {% endfor %}
    </table>


{% endblock %}